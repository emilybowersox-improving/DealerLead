@model DealerLead.Dealership
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<h4>Dealership</h4>
<hr />

<form action="/" method="post"></form>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
    @*this hidden input is how the action gets the Id paramter*@
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatorId" />
            
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address1" class="control-label">Street Address 1</label>
                <input asp-for="Address1" class="form-control" />
                <span asp-validation-for="Address1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address2" class="control-label">Street Address 2</label>
                <input asp-for="Address2" class="form-control" />
                <span asp-validation-for="Address2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
                <select asp-for="StateAbbreviation" class="form-control" asp-items="@ViewData["StateSelectList"] as IEnumerable<SelectListItem>"></select>
                <span asp-validation-for="StateAbbreviation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zip" class="control-label">Zipcode</label>
                <input asp-for="Zip" class="form-control" />
                <span asp-validation-for="Zip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<hr />
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}